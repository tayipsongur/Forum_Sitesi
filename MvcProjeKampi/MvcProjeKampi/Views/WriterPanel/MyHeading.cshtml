@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>MyHeading</h2>



@{string color = "";

}


<br />
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><b></b>Başlık İşlemleri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>

                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = " badge badge-warning";
                            }
                            else if (item.Category.CategoryName == "Spor")
                            {
                                color = " badge badge-success";
                            }
                            else if (item.Category.CategoryName == "Yazılım")
                            {
                                color = " badge badge-info";
                            }
                            else if (item.Category.CategoryName == "Kitap")
                            {
                                color = " badge badge-secondary";
                            }
                            else if (item.Category.CategoryName == "Film")
                            {
                                color = " badge badge-danger";
                            }


                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy")) <!-- Tarihi örneğin 15-Nis-2021'gibi bir formata getiriyor.-->
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>


                                <!-- DURUMU TRUE OLANLAR YEŞİL RENKTE OLACAK VE AKTİF YAZACAK
                                    DURUMU FALSE OLANLAR KIRMIZI RENKTE OLACAK VE PASİF YAZACAK.
                                    ALTTAKİ SATIRLAR BUNU SAĞLAMAK İÇİN.
                                    -->
                                <td>
                                    @{

                                        string durum = "";
                                        string renk = "";
                                        if (item.HeadingStatus == true)
                                        {
                                            durum = "Aktif";
                                            renk = "text-success";

                                        }
                                        else
                                        {

                                            durum = "Pasif";
                                            renk = "text-danger";
                                        }
                                    }

                                    <p class=@renk>@durum</p>
                                </td>

                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/ @item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>


                                    <a class="@(item.HeadingStatus==true?"btn btn-danger btn-sm":"btn btn-success btn-sm") " href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash"></i>

                                        @(item.HeadingStatus==true?"Pasif":"Aktif")   <!-- Başlık durumunu aktif/Pasif etmek için kod satırı.-->
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>
</html>
<a href="/WriterPanel/NewHeading/" class="btn btn-primary"> Yeni Başlık Girişi</a>




